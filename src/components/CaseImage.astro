---
const { width, browser, link, src, alt } = Astro.props;
---

<div
    class={`${width} mx-auto mt-8 transition duration-500 ease-in-out transform shadow-xl overflow-hidden rounded-lg group hover:-translate-y-1`}
>
    <div
        class={`${browser} w-full h-11 rounded-t-lg bg-gray-200 dark:bg-gray-900 justify-start items-center space-x-1.5 px-3`}
    >
        <span class="w-3 h-3 bg-red-400 rounded-full"></span>
        <span class="w-3 h-3 bg-yellow-400 rounded-full"></span>
        <span class="w-3 h-3 bg-green-400 rounded-full"></span>
    </div>
    <div class="w-full overflow-hidden">
        {
            link ? (
                <a href={link} target="_blank" rel="noopener noreferrer">
                    <img
                        src={src}
                        alt={alt}
                        class="object-cover w-full h-auto transition duration-500 transform group-hover:scale-105"
                    />
                </a>
            ) : (
                <img
                    src={src}
                    alt={alt}
                    class="object-cover w-full h-auto transition duration-500 transform group-hover:scale-105"
                />
            )
        }
    </div>
</div>
