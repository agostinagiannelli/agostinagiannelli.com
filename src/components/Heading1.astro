---
const { h1, paragraph } = Astro.props;
---

<div class="mx-auto">
    <div>
        <h1
            class="text-4xl font-bold tracking-tight text-center text-black dark:text-white"
        >
            {h1}
        </h1>
        <p
            class="mx-auto mt-4 text-lg text-center text-slate-600 dark:text-slate-200"
        >
            {paragraph}
        </p>
    </div>
</div>
