---
import Button from "@/components/Button.astro";
---

<form id="form" novalidate>
  <div class="mb-5">
    <input
      id="password"
      name="password"
      type="password"
      placeholder="Password"
      required
      class="w-full px-4 py-3 text-black bg-white border outline-none placeholder:text-slate-800 rounded-xl focus:ring-4 border-slate-300 focus:border-slate-600 ring-slate-100 dark:bg-slate-900 dark:text-white dark:placeholder:text-white dark:border-slate-800 dark:focus:border-slate-400 dark:ring-slate-800"
    />
    <div class="mt-1 text-sm text-red-400 empty-feedback invalid-feedback">
      Please provide your password.
    </div>
  </div>
  <Button type="submit">Access</Button>
  <div id="result" class="mt-3 text-center"></div>
</form>

<style>
  .invalid-feedback,
  .empty-feedback {
    display: none;
  }

  .was-validated :placeholder-shown:invalid ~ .empty-feedback {
    display: block;
  }

  .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
    display: block;
  }

  .is-invalid,
  .was-validated :invalid {
    border-color: #f87171;
  }
</style>

<script src="../utils/login.js"></script>
