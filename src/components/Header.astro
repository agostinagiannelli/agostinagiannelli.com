---
import ThemeToggle from "./ThemeToggle.astro";

const ITEMS = [
  {
    title: "About",
    href: "/",
  },
  {
    title: "Contact",
    href: "/contact",
  },
  {
    title: "Case Studies",
    href: "/case-studies",
  },
];
---

<header
  class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-5"
>
  <nav
    class="flex items-center justify-center rounded text-slate-600 dark:text-slate-200"
  >
    {
      ITEMS.map(({ title, href }) => (
        <a
          class="relative block px-4 py-2 transition lg:hover:text-purple-400"
          href={href}
        >
          {title}
        </a>
      ))
    }
    <ThemeToggle />
  </nav>
</header>

<style>
  nav {
    animation: nav-shadow 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  @keyframes nav-shadow {
    to {
      @apply shadow-lg ring-1 backdrop-blur dark:bg-slate-800/90 bg-white/50 ring-white/10;
    }
  }
</style>
