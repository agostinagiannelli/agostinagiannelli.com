---
import ThemeToggle from "./ThemeToggle.astro";

const ITEMS = [
  {
    title: "About",
    href: "/",
  },
  {
    title: "Contact",
    href: "/contact",
  },
  // {
  //   title: "Portfolio",
  //   href: "/portfolio",
  // },
];
---

<header
  class="fixed top-0 z-10 flex items-center justify-center w-full mt-5"
>
  <div class="w-full px-6 lg:w-auto max-w-screen">
    <nav
      class="flex items-center justify-center rounded-lg text-slate-600 dark:text-slate-200"
    >
      {
        ITEMS.map(({ title, href }) => (
          <a
            class="relative block px-3 py-3 transition lg:px-5 lg:hover:text-purple-400"
            href={href}
          >
            {title}
          </a>
        ))
      }
      <ThemeToggle />
    </nav>
  </div>
</header>

<style>
  nav {
    animation: nav-shadow 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  @keyframes nav-shadow {
    to {
      @apply shadow-lg ring-1 backdrop-blur dark:bg-slate-800/90 bg-white/50 ring-white/10;
    }
  }
</style>
