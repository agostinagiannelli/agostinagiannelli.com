---
import AgileIcon from "@/components/icons/Agile.astro";
import CodeIcon from "@/components/icons/Code.astro";
import EcommerceIcon from "@/components/icons/Ecommerce.astro";
import GrowthIcon from "@/components/icons/Growth.astro";
import LanguageIcon from "@/components/icons/Language.astro";
import TrelloIcon from "@/components/icons/BrandTrello.astro";

const SKILLS = [
  {
    title: "Ecommerce",
    description:
      "Over a decade of experience ensuring seamless integration and robust functionality across various platforms including Shopify, WooCommerce, Magento, VTEX, and PrestaShop.",
    icon: EcommerceIcon,
  },
  {
    title: "Project Management",
    description:
      "Demonstrated strong project management skills, ensuring organized and efficient execution of initiatives through agile methodologies while maintaining clear communication and timelines.",
    icon: TrelloIcon,
  },
  {
    title: "Business Growth",
    description:
      "Proven ability to transform business goals into strategic growth initiatives, leveraging technical expertise and business acumen for sustainable expansion.",
    icon: GrowthIcon,
  },
  {
    title: "Digital Product",
    description:
      "Adept at steering digital product development through effective roadmap planning, backlog management, and implementation of user stories and A/B testing.",
    icon: AgileIcon,
  },
  {
    title: "Frontend Development",
    description:
      "Background in frontend development, contributing to user-centric product designs that enhance customer experiences and align with business objectives.",
    icon: CodeIcon,
  },
  {
    title: "Languages",
    description:
      "Native Spanish speaker with a C2 level proficiency in English, facilitating seamless communication and collaboration across international teams and projects.",
    icon: LanguageIcon,
  },
];
---

<div class="grid gap-12 mt-24 sm:grid-cols-2 md:grid-cols-3 md:gap-16">
  {
    SKILLS.map(({ title, description, icon: Icon }) => (
      <div class="flex items-start gap-4">
        <div class="w-8 h-8 p-1 mt-1 transition rounded-xl bg-slate-800 shrink-0 dark:bg-white md:hover:scale-105">
          <Icon class="text-white dark:text-slate-800" />
        </div>
        <div>
          <h3 class="text-xl tracking-tight font-semibold text-slate-800 dark:text-white">
            {title}
          </h3>
          <p class="mt-2 text-lg tracking-tight text-slate-500 dark:text-white">
            {description}
          </p>
        </div>
      </div>
    ))
  }
</div>
