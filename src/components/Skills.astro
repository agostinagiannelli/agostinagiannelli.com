---
import AgileIcon from "@/components/icons/Agile.astro";
import CodeIcon from "@/components/icons/Code.astro";
import EcommerceIcon from "@/components/icons/Ecommerce.astro";
import GrowthIcon from "@/components/icons/Growth.astro";
import LanguageIcon from "@/components/icons/Language.astro";
import TrelloIcon from "@/components/icons/BrandTrello.astro";

const SKILLS = [
  {
    title: "Agile Methodologies",
    description:
      "Adept at steering digital product development through effective roadmap planning, backlog management, and user stories implementation.",
    icon: AgileIcon,
  },
  {
    title: "Project Management",
    description:
      "Demonstrated strong project management skills, ensuring organized and efficient execution of initiatives while maintaining clear communication and timelines.",
    icon: TrelloIcon,
  },
  {
    title: "Growth",
    description:
      "Proven ability to translate business goals into strategic growth initiatives, leveraging technical expertise and business acumen to drive sustainable business expansion.",
    icon: GrowthIcon,
  },
  {
    title: "Ecommerce",
    description:
      "Over a decade ensuring seamless integration and robust functionality across multiple platforms. Experienced with Shopify, WooCommerce, Magento, VTEX, and PrestaShop.",
    icon: EcommerceIcon,
  },
  {
    title: "Frontend Development",
    description: "Background in frontend development, contributing to user-centric product designs that enhance customer experiences and align with business objectives.",
    icon: CodeIcon,
  },
  {
    title: "Languages",
    description: "Native Spanish speaker with a C2 level proficiency in English, facilitating seamless communication and collaboration across international teams and projects.",
    icon: LanguageIcon,
  },
];
---

<div class="grid gap-12 mt-16 sm:grid-cols-2 md:grid-cols-3 md:gap-16">
  {SKILLS.map(({ title, description, icon: Icon }) => (
    <div class="flex items-start gap-4">
      <div class="w-8 h-8 p-1 mt-1 transition rounded-full bg-slate-800 shrink-0 dark:bg-white md:hover:scale-105">
        <Icon class="text-white dark:text-slate-800" />
      </div>
      <div>
        <h3 class="text-lg font-semibold text-slate-800 dark:text-white">{title}</h3>
        <p class="mt-2 leading-relaxed text-slate-600 dark:text-white">
          {description}
        </p>
      </div>
    </div>
  ))}
</div>
