---
const { category } = Astro.props;
---

<div class="flex items-center transition md:justify-center md:hover:scale-105">
  <button
    class="cursor-pointer category-button"
    data-type={`${category.replace(/\s+/g, "-")}`}
  >
    <div
      class="inline-flex items-center justify-center w-full px-3 py-1 text-xs font-semibold text-purple-400 uppercase bg-purple-100 rounded-full cursor-pointer outline dark:bg-slate-800 dark:text-white/80 backdrop-blur-3xl whitespace-nowrap"
    >
      {category}
    </div>
  </button>
</div>
