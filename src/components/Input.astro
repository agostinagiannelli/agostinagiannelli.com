---
const { name, type, placeholder } = Astro.props;
const className =
    "w-full px-4 py-3 text-black border rounded-lg outline-none placeholder:text-slate-800 border-slate-300 dark:bg-slate-900 dark:text-white dark:placeholder:text-white dark:border-slate-600";
---

{
    type === "message" ? (
        <textarea
            id={name}
            name={name}
            placeholder={placeholder}
            required
            class={className}
        />
    ) : (
        <input
            id={name}
            name={name}
            type={type}
            placeholder={placeholder}
            required
            class={className}
        />
    )
}
