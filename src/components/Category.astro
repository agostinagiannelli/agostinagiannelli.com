---
const { category } = Astro.props;
---

<button
  class="category-button cursor-pointer"
  data-type={`${category.replace(/\s+/g, "-")}`}
>
  <div
    class="inline-flex items-center justify-center w-full px-3 py-1 text-xs uppercase font-semibold text-purple-400 bg-purple-100 rounded-full cursor-pointer dark:bg-slate-800 dark:text-white/80 backdrop-blur-3xl whitespace-nowrap"
  >
    {category}
  </div>
</button>
