---
const { category, slug, title, subtitle } = Astro.props;
---

<li class={`case ${category.replace(/\s+/g, "-")}`}>
  <a href={`/case/${slug}`}>
    <div>
      <p
        class="text-sm font-medium tracking-wider uppercase text-slate-800 dark:text-slate-200"
      >
        {category}
      </p>
      <h2
        class="mt-4 text-2xl font-semibold leading-snug tracking-tight text-black dark:text-white"
      >
        {title}
      </h2>
      <p class="mt-4 text-slate-500 dark:text-slate-200">
        {subtitle}
      </p>
      <div class="mt-4 text-slate-500 dark:text-slate-200">
        <a
          href={`/case/${slug}`}
          class="lg:relative lg:dark:after:bg-slate-200 lg:after:bg-slate-500 lg:after:absolute lg:after:h-0.5 lg:after:w-0 after:bottom-0 lg:after:left-0 lg:hover:after:w-full lg:after:transition-all lg:after:duration-300 lg:cursor-pointer"
        >
          â†’ Read Case Study
        </a>
      </div>
    </div>
  </a>
</li>
