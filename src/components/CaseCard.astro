---
const { category, slug, title, subtitle } = Astro.props;
---

<li class={`case ${category.replace(/\s+/g, "-")}`}>
  <a href={`/case/${slug}`}>
    <div>
      <p
        class="text-sm font-medium tracking-wider text-black uppercase dark:text-white"
      >
        {category}
      </p>
      <h2
        class="mt-4 text-2xl font-semibold leading-snug tracking-tight text-black dark:text-white"
      >
        {title}
      </h2>
      <p class="mt-4 text-slate-500 dark:text-slate-200">
        {subtitle}
      </p>
      <div class="mt-4 text-slate-500 dark:text-white">
        <a
          href={`/case/${slug}`}
          class="relative dark:after:bg-white after:bg-slate-500 after:absolute after:h-0.5 after:w-0 after:bottom-0 after:left-0 hover:after:w-full after:transition-all after:duration-300 cursor-pointer"
        >
