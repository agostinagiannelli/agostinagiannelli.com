---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/Container.astro";
import Heading1 from "@/components/Heading1.astro";
import LoginForm from "@/components/LoginForm.astro";
---

<Layout title="Agostina Giannelli • Login">
    <Container>
        <Heading1 h1="Login" paragraph="Want to explore?" />
        <div class="grid gap-10 mt-16 md:grid-cols-2">
            <div>
                <p class="text-black dark:text-white">
                    Case studies are password-protected. Simply enter the
                    password to access them, or feel free to reach out if you'd
                    like to request it.
                </p>
                <div class="mt-5 text-slate-500 dark:text-white">
                    <a
                        href="/contact"
                        class="relative dark:after:bg-white after:bg-slate-500 after:absolute after:h-0.5 after:w-0 after:bottom-0 after:left-0 hover:after:w-full after:transition-all after:duration-300 cursor-pointer"
                    >
                        → Get in Touch
                    </a>
                </div>
            </div>
            <LoginForm />
        </div>
    </Container>
</Layout>

